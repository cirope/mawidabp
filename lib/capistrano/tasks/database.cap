namespace :deploy do
  namespace :check do
    task linked_files: 'config/database.yml'
  end
end

remote_file 'config/database.yml' => 'config/database.example.yml', roles: :app

file 'config/database.example.yml' do |t|
  on roles(:app) do
    info "Now edit the config files in #{shared_path}."
    upload! t.name shared_path.join('config/database.yml')
  end
end
