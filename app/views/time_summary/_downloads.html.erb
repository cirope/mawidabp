<% links = [
        link_to(
          t('label.current_week_downloads'), 
            time_summary_current_path(:week),
           :class => 'dropdown-item'
        ),
        link_to(
          t('label.current_month_downloads'), 
            time_summary_current_path(:month),
           :class => 'dropdown-item'
        ),
        link_to(
          t('label.current_year_downloads'), 
            time_summary_current_path(:year),
           :class => 'dropdown-item'
        )
      ]
%>
<% right = true %>
<div class="dropup d-inline">
  <%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do %>
    <%= t 'label.downloads' %>
  <% end %>
  <div class="dropdown-menu<%= ' dropdown-menu-right' if right %>">
    <% links.each do |link| %>
      <%= link %>
    <% end %>
  </div>
</div>
