<% id = f.object.object_id %>
<fieldset class="process_control">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-10">
        <%= f.input :id, as: :string, label: false,
          input_html: {
            id: "process_control_#{id}",
            name: 'process_control[process_control_data]',
            title: t('label.search'),
            autofocus: true,
            data: {
              autocomplete_url: auto_complete_for_process_control_reviews_path,
              autocomplete_id_target: "#hidden_process_control_#{id}"
            }
          } %>
          <%= f.input "hidden_process_control_#{id}", as: :hidden, input_html: {
            name: 'review[process_control_ids][]', value: f.object.id,
            id: "hidden_process_control_#{id}" } %>
      </div>
      <div class="col-md-2">
        <div class="toggle-visibility">
          <%= link_to_remove_nested_item f %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
