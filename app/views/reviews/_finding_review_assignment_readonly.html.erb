<div class="finding_review_assignment align-top">
  <div>
    <ul class="raw_list">
      <li>
        <%= f.hidden_field :finding_id, :value => f.object.finding_id,
          :id => "hidden_finding_id_#{f.object.finding_id}" %>
        <%= f.object.finding.try(:to_s) %>
        <strong>[<%= f.object.finding.try(:state_text) %>]</strong> |
        <% if f.object.finding %>
          <%= link_to t('label.show'), finding_path(
            f.object.finding.pending? ? 'incomplete' : 'complete', f.object.finding) %> |
        <% end %>
        <%= remove_item_link(f) unless readonly %>
      </li>
    </ul>
  </div>
</div>