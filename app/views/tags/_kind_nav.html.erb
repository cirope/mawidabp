<div class="dropdown d-md-none">
  <button class="btn btn-outline-info dropdown-toggle" type="button" data-toggle="dropdown">
    <%= tag_kinds[params[:kind]] %>
  </button>

  <div class="dropdown-menu">
    <% tag_kinds.each do |kind, name| %>
      <%= link_to name, tags_path(kind: kind), class: (kind.to_s == params[:kind] ? 'dropdown-item active' : 'dropdown-item') %>
    <% end %>
  </div>
</div>

<ul class="nav nav-tabs d-none d-md-flex">
  <% tag_kinds.each do |kind, name| %>
    <%= content_tag :li, class: 'nav-item' do %>
      <%= link_to name, tags_path(kind: kind), class: (kind.to_s == params[:kind] ? 'nav-link active' : 'nav-link') %>
    <% end %>
  <% end %>
</ul>
