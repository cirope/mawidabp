<table class="table table-sm table-striped table-hover">
  <thead>
    <tr>
      <th><%= Organization.human_attribute_name 'name' %></th>
      <th class="d-none d-sm-table-cell"><%= Organization.human_attribute_name 'corporate' %></th>
      <th class="d-none d-sm-table-cell"><%= Organization.human_attribute_name 'prefix' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td class="d-none d-sm-table-cell"><%= t organization.corporate? ? 'label.yes' : 'label.no' %></td>
        <td class="d-none d-sm-table-cell"><strong><%= organization.prefix %></strong></td>
        <td class="text-right"><%= link_to_show organization %></td>
        <td class="text-right"><%= link_to_edit [:edit, organization] %></td>
        <td class="text-right"><%= link_to_destroy organization %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<%= paginate @organizations %>
<%= link_to t('label.new'), new_organization_path, class: 'btn btn-primary' %>
