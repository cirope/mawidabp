<div class="card">
  <div class="card-header">
    <h5 class="mb-0">
      <%= @title %>
    </h5>
  </div>

  <div class="card-body">
    <h2>
      <%= @organization %>
    </h2>

    <p class="mb-0">
      <strong><%= Organization.human_attribute_name 'prefix' %></strong>:
      <%= @organization.prefix %>
    </p>

    <div>
      <strong><%= Organization.human_attribute_name 'description' %></strong>:
      <%= simple_format @organization.description, class: 'mb-1' unless @organization.description.blank? %>
    </div>

    <% if @organization.image.attached? %>
      <p class="mb-2">
        <strong><%= Organization.human_attribute_name 'image' %></strong>:
      </p>

      <div>
        <%= image_tag @organization.thumb_image, alt: 'Logo' %>
      </div>
    <% end %>

    <% if @organization.co_brand_image.attached? %>
      <p class="my-2">
        <strong><%= Organization.human_attribute_name 'co_brand_image' %></strong>:
      </p>

      <div>
        <%= image_tag @organization.thumb_co_brand_image, alt: 'Logo' %>
      </div>
    <% end %>
  </div>

  <div class="card-footer">
    <%= link_to_edit edit_organization_path(@organization) %> |
    <%= link_to_index organizations_path %>
  </div>
</div>
