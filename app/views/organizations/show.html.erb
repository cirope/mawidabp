<div class="page-header">
  <h1>
    <%= @organization %>
    <small><%= @organization.prefix %></small>
  </h1>
</div>

<p>
  <strong><%= Organization.human_attribute_name 'kind' %></strong>:
  <%= t "organizations.kinds.#{@organization.kind}" %>
</p>

<p>
  <strong><%= Organization.human_attribute_name 'description' %></strong>:
  <%= @organization.description %>
</p>

<p>
  <strong><%= Organization.human_attribute_name 'image_model' %></strong>:
</p>

<% if @organization.image_model %>
  <br />
  <div><%= organization_image_tag %></div>
<% end %>

<hr />

<%= link_to_edit edit_organization_path(@organization) %> |
<%= link_to_index organizations_path %> |
<%= link_to_back %>
