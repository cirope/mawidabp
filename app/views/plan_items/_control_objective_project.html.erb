<% id = f.object.object_id %>
<fieldset class="control_objective">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-11">
        <% if f.object.new_record? %>
          <%= f.input :control_objective, as: :string, label: false,
            input_html: {
              autofocus: true,
              title: t('label.search'),
              data: {
                autocomplete_url: auto_complete_for_control_objective_plan_plan_items_path,
                autocomplete_id_target: "#hidden_control_objective_#{id}"
              }
            } %>
            <%= f.input :control_objective_id, as: :hidden, input_html: {
              value: f.object.id, id: "hidden_control_objective_#{id}"
            } %>
        <% else %>
          <%= simple_format f.object.control_objective.name %>
        <% end %>
      </div>
      <div class="col-md-1">
        <div class="mt-2 text-right">
          <%= link_to_remove_nested_item f %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
