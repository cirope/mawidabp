<% id = f.object.object_id %>
<fieldset class="best_practice">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-11">
        <% if f.object.new_record? %>
          <%= f.input :best_practice, as: :string, label: false,
            input_html: {
              autofocus: true,
              title: t('label.search'),
              data: {
                autocomplete_url: auto_complete_for_best_practice_plan_plan_items_path,
                autocomplete_id_target: "#hidden_best_practice_#{id}"
              }
            } %>
            <%= f.input :best_practice_id, as: :hidden, input_html: {
              value: f.object.id, id: "hidden_best_practice_#{id}"
            } %>
        <% else %>
          <%= simple_format f.object.best_practice.name %>
        <% end %>
      </div>
      <div class="col-md-1">
        <div class="mt-2 text-right">
          <%= link_to_remove_nested_item f %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
