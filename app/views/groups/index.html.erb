<table class="list">
  <thead>
    <tr>
      <th><%= Group.human_attribute_name :name %></th>
      <th><%= Group.human_attribute_name :description %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= super_truncate group.name, 30 %></td>
        <td><%= super_truncate group.description, 30 %></td>
        <td><%= link_to_show group %></td>
        <td><%= link_to_edit edit_group_path(group) %></td>
        <td><%= button_to_destroy group %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="links">
  <%= pagination_links @groups %>
  <%= link_to t(:'label.new'), new_group_path %>
  <div class="clear"></div>
</div>