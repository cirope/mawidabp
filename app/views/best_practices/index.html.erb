<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= BestPractice.human_attribute_name :name %></th>
      <th class="visible-lg"><%= BestPractice.human_attribute_name :description %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @best_practices.each do |best_practice| %>
      <tr>
        <td><%= super_truncate(best_practice.name, 40) %></td>
        <td class="visible-lg"><%= super_truncate(best_practice.description, 40) %></td>
        <td><%= link_to_show best_practice %></td>
        <td><%= link_to_edit edit_best_practice_path(best_practice) %></td>
        <td><%= link_to_destroy best_practice %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<div class="form-actions form-footer">
  <div class="pull-right"><%= pagination_links @best_practices %></div>
  <%= link_to t('label.new'), new_best_practice_path, class: 'btn btn-primary' %>
</div>
