<p>
  <strong><%= BusinessUnitType.human_attribute_name :name %>:</strong>
  <%= @business_unit_type.name %>
</p>

<p>
  <strong><%= BusinessUnitType.human_attribute_name :business_unit_label %>:</strong>
  <%= @business_unit_type.business_unit_label %>
</p>

<p>
  <strong><%= BusinessUnitType.human_attribute_name :project_label %>:</strong>
  <%= @business_unit_type.project_label %>
</p>

<p>
  <strong><%= BusinessUnitType.human_attribute_name :external %>:</strong>
  <%= t @business_unit_type.external ? 'label.yes' : 'label.no' %>
</p>

<% unless @business_unit_type.business_units.empty? %>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th><%= BusinessUnit.model_name.human %></th>
      </tr>
    </thead>
    <tbody>
      <% @business_unit_type.business_units.each do |bu| %>
        <tr>
          <td><%= bu.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<hr />

<div class="form-footer">
  <%= link_to_edit edit_business_unit_type_path(@business_unit_type) %> |
  <%= link_to t('label.list'), business_unit_types_path %> |
  <%= link_to_back %>
</div>
