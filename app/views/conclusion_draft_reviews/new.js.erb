<% if @conclusion_draft_review.review %>
  $('#conclusion_draft_review_business_unit').val('<%= j @conclusion_draft_review.review.business_unit.name %>')
  $('#conclusion_draft_review_project').val('<%= j @conclusion_draft_review.review.plan_item.project %>')
  $('#conclusion_draft_review_score').val('<%= j @conclusion_draft_review.review.score_text %>')
  $('#conclusion_draft_review_score_alt').val('<%= j @conclusion_draft_review.review.score_alt_text %>')
  $('#conclusion_draft_review_recipients').val('<%= j @conclusion_draft_review.review.business_unit_type.recipients %>')
  $('#conclusion_draft_review_sectors').val('<%= j @conclusion_draft_review.review.business_unit_type.sectors %>')
  $('#conclusion_draft_review_review_attributes_description').val('<%== j @conclusion_draft_review.review.description %>')
  $('#conclusion_draft_review_review_attributes_id').val('<%= @conclusion_draft_review.review.id %>')
  $('#conclusion_draft_review_main_recommendations').val('<%= j main_recommendations_for(@conclusion_draft_review) %>')
  $('#conclusion_draft_review_recipients').val('<%= j recipients_for(@conclusion_draft_review) %>');

  $('#best_practice_comments_container').html('<%= j best_practice_comments_form(@conclusion_draft_review) %>')

  <% if Current.conclusion_pdf_format == 'bic' %>
    $('#conclusion_draft_review_applied_procedures').val('<%= j @conclusion_draft_review.suggested_applied_procedures %>')
  <% end %>
<% else %>
  $('#conclusion_draft_review_business_unit').val('')
  $('#conclusion_draft_review_project').val('')
  $('#conclusion_draft_review_score').val('')
  $('#conclusion_draft_review_score_alt').val('')
  $('#conclusion_draft_review_recipients').val('')
  $('#conclusion_draft_review_sectors').val('')
  $('#conclusion_draft_review_review_attributes_description').val('')
  $('#conclusion_draft_review_review_attributes_id').val('')
  $('#conclusion_draft_review_recipients').val('')

  <% if Current.conclusion_pdf_format == 'bic' %>
    $('#conclusion_draft_review_applied_procedures').val('')
  <% end %>

  $('#best_practice_comments_container').html('')
<% end %>

$('#error_list').remove()
