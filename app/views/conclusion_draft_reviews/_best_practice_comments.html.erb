<h5><%= BestPractice.model_name.human count: 0 %> </h5>
<hr>

<div class="row">
  <div class="col-md-6">
    <h5 class="h6"><%= BestPracticeComment.human_attribute_name 'best_practice' %></h5>
  </div>
  <div class="col-md-6">
    <h5 class="h6"><%= BestPracticeComment.human_attribute_name 'auditor_comment' %></h5>
  </div>
</div>

<div id="best_practice_comments">
  <%= f.simple_fields_for :review do |r_f| %>
    <%= r_f.simple_fields_for :best_practice_comments, sorted_best_practice_comments_for(f.object) do |bpc_f| %>
      <%= render 'best_practice_comment', f: bpc_f %>
    <% end %>
  <% end %>
</div>

<hr>
