<%
  user = item
  id = user.id || item.object_id
%>
<fieldset class="user" style="margin-bottom: 10px;">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <% if user.new_record? %>
          <%= text_field_tag "user[#{id}][data]", '',
            id: "user_#{id}_data",
            class: 'form-control',
            title: t('label.search'),
            autocomplete: :off,
            autofocus: true, data: {
              autocomplete_url: conclusion_draft_reviews_users_path,
              autocomplete_id_target: "#user_#{id}_id"
            } %>
        <% else %>
          <%= text_field_tag "user[#{id}][data]",
            user.try(:full_name_with_function), readonly: true, class: 'form-control' %>
        <% end %>
        <%= hidden_field_tag "user[#{id}][id]", user.id %>
      </div>
      <div class="col-md-1 mt-2 text-end">
        <%= link_to_remove_child_item(nil) %>
      </div>
    </div>
  </div>
</fieldset>
