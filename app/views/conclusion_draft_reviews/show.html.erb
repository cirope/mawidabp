<div id="showed_data">
  <h1 class="plain" style="margin-top: 1em;">
    <%= Review.human_name %>
    <%= @conclusion_draft_review.review.identification %>
  </h1>
  <h1 class="plain"><%= @conclusion_draft_review.review.plan_item.project %></h1>
  <h2 style="margin-top: 2em;"><%= @conclusion_draft_review.review.plan_item.business_unit.name %></h2>
  <h2 style="margin-bottom: 2em;"><%= l @conclusion_draft_review.issue_date, :format => :long %></h2>

  <p>
    <b><%= t(:'conclusion_review.issue_date_title') %></b>:
    <%= l(@conclusion_draft_review.issue_date, :format => :long) %>
  </p>
  <p>
    <b><%= @conclusion_draft_review.review.business_unit.business_unit_type.business_unit_label %></b>:
    <%= @conclusion_draft_review.review.business_unit.name %>
  </p>

  <% unless @conclusion_draft_review.review.business_unit.business_unit_type.project_label.blank? -%>
    <p>
      <b><%= @conclusion_draft_review.review.business_unit.business_unit_type.project_label %></b>:
      <%= @conclusion_draft_review.review.plan_item.project %>
    </p>
  <% end -%>

  <p>
    <b><%= t(:'conclusion_review.audit_period_title') %></b>:
    <%= t(:'conclusion_review.audit_period',
        :start => I18n.l(@conclusion_draft_review.review.plan_item.start, :format => :long),
        :end => I18n.l(@conclusion_draft_review.review.plan_item.end, :format => :long)) %>
  </p>

  <h2 style="margin: 1em 0em; text-decoration: underline;"><%= t(:'conclusion_review.objectives_and_scopes') %></h2>
  <% grouped_control_objectives = @conclusion_draft_review.control_objective_items.group_by(&:'process_control') -%>
  <% grouped_control_objectives.each do |process_control, cois| -%>
    <p>
      <b><%= ProcessControl.human_name %></b>:
      <%= process_control.name %>
    </p>
    <ul class="raw_list">
      <% cois.each do |coi| -%>
        <li><%= coi.control_objective_text %></li>
      <% end -%>
    </ul>
  <% end -%>

  <% unless @conclusion_draft_review.applied_procedures.blank? -%>
    <h2 style="margin: 1em 0em; text-decoration: underline;">
      <%= t(:'conclusion_review.applied_procedures') %>
    </h2>
    <p><%= @conclusion_draft_review.applied_procedures %></p>
  <% end -%>

  <h2 style="margin-top: 1em; text-decoration: underline;">
    <%= t(:'conclusion_review.conclusion') %>
  </h2>
  <%= conclusion_review_score_details_table @conclusion_draft_review.review %>

  <p class="note"><%= t(:'review.review_qualification_explanation') %></p>

  <% unless @conclusion_draft_review.conclusion.blank? -%>
    <p><%= @conclusion_draft_review.conclusion %></p>
  <% end -%>

  <% review_has_observations = grouped_control_objectives.any? do |_, cois|
    cois.any? { |coi| !coi.weaknesses.blank? }
  end %>

  <% if review_has_observations -%>
    <h2 style="margin: 1em 0em; text-decoration: underline;">
      <%= t(:'conclusion_review.findings') %>
    </h2>

    <table class="summary_table">
      <% grouped_control_objectives.each do |process_control, cois| -%>
        <%= conclusion_review_process_control_weakness_details_table(process_control, cois, false) %>
      <% end -%>
    </table>
  <% end -%>

  <% review_has_oportunities = grouped_control_objectives.any? do |_, cois|
    cois.any? { |coi| !coi.oportunities.blank? }
  end %>

  <% if review_has_oportunities -%>
    <h2 style="margin: 1em 0em; text-decoration: underline;">
      <%= t(:'conclusion_review.oportunities') %>
    </h2>

    <table class="summary_table">
      <% grouped_control_objectives.each do |process_control, cois| -%>
        <%= conclusion_review_process_control_oportunity_details_table(process_control, cois, false) %>
      <% end -%>
    </table>
  <% end -%>
</div>

<div id="links">
  <%= link_to t(:'label.edit'), edit_conclusion_draft_review_path(@conclusion_draft_review) %> |
  <%= link_to t(:'label.list'), conclusion_draft_reviews_path %> |
  <%= link_to t(:'label.download'), :action => :export_to_pdf,
  :id => @conclusion_draft_review %> |
  <%= link_to t(:'conclusion_draft_review.generate_score_sheet'),
    :action => :score_sheet, :id => @conclusion_draft_review %> |
  <%= link_to t(:'conclusion_draft_review.generate_global_score_sheet'),
    :action => :score_sheet, :id => @conclusion_draft_review, :global => 1 %> |
  <%= link_to t(:'conclusion_draft_review.download_work_papers'),
    :action => :download_work_papers, :id => @conclusion_draft_review %> |
  <%= link_to_back %>
</div>