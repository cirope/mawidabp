<table class="table table-sm table-striped table-hover">
  <thead>
    <tr>
      <th><%= Questionnaire.human_attribute_name :name %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionnaires.each do |questionnaire| %>
      <tr>
        <td><%= questionnaire.name %></td>
        <td class="text-end"><%= link_to_clone new_questionnaire_path(clone_from: questionnaire.id) %></td>
        <td class="text-end"><%= link_to_show questionnaire %></td>
        <td class="text-end"><%= link_to_edit edit_questionnaire_path(questionnaire) %></td>
        <td class="text-end"><%= link_to_destroy questionnaire %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<%= paginate @questionnaires %>
<%= link_to_new new_questionnaire_path, class: 'btn btn-primary' %>
