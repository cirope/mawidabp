<div class="question item">
  <div class="item_field" style="width: 50%;">
    <%= f.text_field :question, :style => 'height: 3em;' %>
  </div>
  <div class="item_field" style="width: 15%;">
    <%= f.check_box :answer_type %>
    <%= t 'activerecord.models.answer_multi_choice' %>
  </div>
  <div class="item_field" style="width: 10%;">
    <%= f.hidden_field :sort_order, :class => :sort_number %>
    <%= hidden_lock_version(f) %>
    <%= remove_item_link(f) %>
    <%= link_to_move %>
  </div>
</div>
<script type="text/javascript">
  FormUtil.completeSortNumbers();
</script>