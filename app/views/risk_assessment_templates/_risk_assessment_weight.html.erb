<fieldset class="risk_assessment_weight">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-4">
        <%= f.input :name, label: false, input_html: { autofocus: f.object.new_record? } %>
      </div>
      <div class="col-md-4">
        <%= f.input :description, label: false, as: :string %>
      </div>
      <div class="col-md-3">
        <%= f.input :weight, label: false %>
      </div>
      <div class="col-md-1">
        <div class="toggle-visibility">
          <%= link_to_remove_nested_item f %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
