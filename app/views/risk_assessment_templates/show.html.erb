<div class="card">
  <div class="card-body">
    <p class="mb-1">
      <strong><%= RiskAssessmentTemplate.human_attribute_name 'name' %></strong>:
      <%= @risk_assessment_template.name %>
    </p>
    <p class="mb-1">
      <strong><%= RiskAssessmentTemplate.human_attribute_name 'description' %></strong>:
      <%= @risk_assessment_template.description %>
    </p>
    <p class="mb-1">
      <strong><%= RiskAssessmentTemplate.human_attribute_name 'formula' %></strong>:
      <%= @risk_assessment_template.formula %>
    </p>

    <% if @risk_assessment_template.risk_assessment_weights.any? %>
      <table class="table table-sm table-striped table-hover">
        <caption>
          <h5><%= RiskAssessmentWeight.model_name.human count: 0 %></h5>
        </caption>
        <thead>
          <tr>
            <th><%= RiskAssessmentWeight.human_attribute_name 'identifier' %></th>
            <th><%= RiskAssessmentWeight.human_attribute_name 'name' %></th>
            <th><%= RiskAssessmentWeight.human_attribute_name 'description' %></th>
          </tr>
        </thead>

        <tbody>
          <% @risk_assessment_template.risk_assessment_weights.each do |risk_assessment_weight| %>
            <tr>
              <td><%= risk_assessment_weight.identifier %></td>
              <td><%= risk_assessment_weight.name %></td>
              <td><%= risk_assessment_weight.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <%= link_to_edit [:edit, @risk_assessment_template] %> |
    <%= link_to_index risk_assessment_templates_path %>
  </div>
</div>
