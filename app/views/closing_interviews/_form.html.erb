<%= simple_form_for @closing_interview do |f| %>
  <%= render 'shared/error_explanation', f: f %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <% if @closing_interview.new_record? %>
          <%= closing_interview_review_field f %>
        <% else %>
          <%= f.input :review_description, label: ClosingInterview.human_attribute_name('review'),
            input_html: { value: @closing_interview.review, readonly: true } %>
        <% end %>
        <%= f.input :findings_summary, input_html: { rows: 4 } %>
        <%= f.input :recommendations_summary, input_html: { rows: 4 } %>
        <%= f.input :suggestions, input_html: { rows: 4 } %>
      </div>
      <div class="col-md-6">
        <%= f.input :interview_date, as: :date_picker %>
        <%= f.input :comments, input_html: { rows: 4 } %>
        <%= f.input :audit_comments, input_html: { rows: 4 } %>
        <%= f.input :responsible_comments, input_html: { rows: 4 } %>
      </div>
    </div>

    <%= f.input :lock_version, as: :hidden %>

    <h4>
      <%= ClosingInterviewUser.model_name.human count: 0 %>
    </h4>

    <div class="row">
      <div class="col-md-6">
        <h5><strong><%= ClosingInterviewUser.human_attribute_name 'user' %></strong></h5>
      </div>
    </div>

    <div id="closing_interview_users">
      <%= f.simple_fields_for :closing_interview_users do |oiu_f| %>
        <%= render 'closing_interview_user', f: oiu_f %>
      <% end %>

      <p>
        <%= link_to_add_fields t('.add_closing_interview_user'), f, :closing_interview_users %>
      </p>
    </div>
  </div>

  <hr>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
