<%= simple_form_for @opening_interview do |f| %>
  <%= render 'shared/error_explanation', f: f %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <% if @opening_interview.new_record? %>
          <%= opening_interview_review_field f %>
        <% else %>
          <%= f.input :review_description, label: OpeningInterview.human_attribute_name('review'),
            input_html: { value: @opening_interview.review, readonly: true } %>
        <% end %>
        <%= f.input :start_date, as: :date_picker %>
        <%= f.input :objective, input_html: { rows: 4 } %>
        <%= f.input :program, input_html: { rows: 4 } %>
        <%= f.input :scope, input_html: { rows: 4 } %>
      </div>
      <div class="col-md-6">
        <%= f.input :interview_date, as: :date_picker %>
        <%= f.input :end_date, as: :date_picker %>
        <%= f.input :suggestions, input_html: { rows: 4 } %>
        <%= f.input :comments, input_html: { rows: 4 } %>
      </div>
    </div>

    <%= f.input :lock_version, as: :hidden %>

    <h4><%= t 'opening_interviews.show.auditeds' %></h4>

    <div class="row">
      <div class="col-md-6">
        <h5><strong><%= OpeningInterviewUser.human_attribute_name 'user' %></strong></h5>
      </div>
    </div>

    <div id="responsibles">
      <%= f.simple_fields_for :responsibles do |r_f| %>
        <%= render 'opening_interview_user', f: r_f %>
      <% end %>

      <p>
        <%= link_to_add_fields t('.add_responsible'), f, :responsibles, 'opening_interview_user' %>
      </p>
    </div>

    <h4><%= t 'opening_interviews.show.auditors' %></h4>

    <div class="row">
      <div class="col-md-6">
        <h5><strong><%= OpeningInterviewUser.human_attribute_name 'user' %></strong></h5>
      </div>
    </div>

    <div id="auditors">
      <%= f.simple_fields_for :auditors do |a_f| %>
        <%= render 'opening_interview_user', f: a_f %>
      <% end %>

      <p>
        <%= link_to_add_fields t('.add_auditor'), f, :auditors, 'opening_interview_user' %>
      </p>
    </div>

    <h4><%= OpeningInterviewUser.model_name.human count: 0 %></h4>

    <div class="row">
      <div class="col-md-6">
        <h5><strong><%= OpeningInterviewUser.human_attribute_name 'user' %></strong></h5>
      </div>
    </div>

    <div id="assistants">
      <%= f.simple_fields_for :assistants do |a_f| %>
        <%= render 'opening_interview_user', f: a_f %>
      <% end %>

      <p>
        <%= link_to_add_fields t('.add_assistant'), f, :assistants, 'opening_interview_user' %>
      </p>
    </div>
  </div>

  <hr>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
