<fieldset class="cost">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-2">
        <%= f.input :raw_cost, label: false, input_html: { maxlength: 255 } %>
      </div>
      <div class="col-md-10">
        <%= f.input :description, label: false, input_html: { rows: 1 } %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :cost_type, as: :hidden %>
  </div>
</fieldset>
