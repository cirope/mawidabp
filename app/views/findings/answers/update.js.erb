+function () {
  $('[data-endorsement-link="<%= @endorsement.id %>"]').remove()
  $('[data-endorsement-status="<%= @endorsement.id %>"]')
    .text('<%= t "findings.endorsements.status.#{@endorsement.status}" %>')
    .removeClass('badge-secondary')
    .addClass('badge-<%= finding_endorsement_class @endorsement %>')
  $('[data-endorsement-text="<%= @endorsement.id %>"]')
    .text('<%= j @endorsement.reason %>')
}()
