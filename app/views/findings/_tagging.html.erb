<%
  id = f.object.object_id
  finding = f.object.taggable || parent.object
  tagging = f.object
  tag = f.object.tag
  readonly = readonly
%>
<fieldset class="tagging">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <% if has_nested_tags?(kind: 'finding') && tag.blank? %>
          <%= f.input :tag_id,
            as: :grouped_select,
            group_method: :last,
            collection: grouped_tag_options(kind: 'finding'),
            label: false,
            prompt: true,
            input_html: { autofocus: true }
          %>
        <% elsif tag.blank? %>
          <%= f.input :tag, as: :string, label: false, input_html: {
            value: tag.to_s,
            id: "finding_tagging_#{id}",
            title: t('label.search'), autocomplete: :off, autofocus: true,
            data: {
              autocomplete_params: { kind: 'finding' },
              autocomplete_url: url_for([:auto_complete_for_tagging, finding.class]),
              autocomplete_id_target: "#hidden_tag_#{id}"
            }
          } %>
          <%= f.input :tag_id, as: :hidden, input_html: { id: "hidden_tag_#{id}" } %>
        <% else %>
          <%= f.input "finding_tagging_#{id}", label: false, input_html: { value: tag.to_s, readonly: true } %>
          <%= f.input :tag_id, as: :hidden, input_html: { id: "hidden_tag_#{id}" } %>
        <% end %>
      </div>
      <% if tag.blank? || tag.include_description? %>
        <div class="col-md-5">
          <%= f.input :description, label: false, input_html: { rows: 1, hidden: tag.blank?, id: "finding_tagging_#{id}_description" } %>
        </div>
      <% end %>
      <div class="col-md-1">
        <div class="mt-2 text-right">
          <%= link_to_remove_nested_item f unless readonly %>
        </div>
      </div>
    </div>
  </div>
</fieldset>

<% if tag.blank? %>
  <script type="text/javascript">
    $('#finding_tagging_<%= id %>').on('autocomplete:update', function() {
      if ($(this).data('item')['include_description?']) {
        $('#finding_tagging_<%= id %>_description').removeAttr('hidden');
        $('#finding_tagging_<%= id %>_description').parent().removeAttr('hidden');
        $('#finding_tagging_<%= id %>_description').parent().parent().removeAttr('hidden');
      } else {
        $('#finding_tagging_<%= id %>_description').val('').attr('hidden', true);
        $('#finding_tagging_<%= id %>_description').parent().val('').attr('hidden', true);
        $('#finding_tagging_<%= id %>_description').parent().parent().val('').attr('hidden', true);
      }
    });
  </script>
<% end %>
