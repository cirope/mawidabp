<%= f.simple_fields_for :issues do |i_f| %>
  <%= render 'issue', f: i_f, readonly: readonly %>
<% end %>

<div id="finding_issues"></div>

<div class="row justify-content-end">
  <div class="col-2 text-right" data-sum-amount-impact-risks data-current-currency="<%= t 'number.currency.format.unit' %>">
    <div class="row">
      <div class="col-10 text-right">
        <%= number_to_currency @finding.issues_amount %>
      </div>
    </div>
  </div>
</div>

<div
  data-impact-risks-value="<%= @finding.impact_risk_value %>"
  data-impact-risks-percentage-value="<%= @finding.impact_risk_percentage %>"
  data-percentage-impact-risks-types="<%= finding_percentage_impact_risks_types(@finding) %>"
  data-impact-risks-types="<%= finding_impact_risks_types(@finding) %>"
  data-use-scope-cycle="<%= USE_SCOPE_CYCLE %>">
</div>

<%= link_to_add_fields(
  t('finding.add_issue'), f,
  :issues, nil,
  { insert_into: '#finding_issues' }
) unless readonly %>
