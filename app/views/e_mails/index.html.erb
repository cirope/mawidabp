<table class="list">
  <thead>
    <tr>
      <th><%= EMail.human_attribute_name 'created_at' %></th>
      <th><%= EMail.human_attribute_name 'to' %></th>
      <th><%= EMail.human_attribute_name 'subject' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= l email.created_at, :format => :short %></td>
        <td><%= super_truncate email.to %></td>
        <td><%= super_truncate email.subject %></td>
        <td><%= link_to_show email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="links">
  <%= pagination_links @emails %>
  <%= link_to_back %>
  <div class="clear"></div>
</div>