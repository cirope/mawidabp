<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= Notification.human_attribute_name :status %></th>
      <th class="visible-lg"><%= t 'notification.type' %></th>
      <th class="visible-lg"><%= Notification.human_attribute_name :user_who_confirm %></th>
      <th><%= Notification.human_attribute_name :created_at %></th>
      <th class="visible-lg"><%= Notification.human_attribute_name :confirmation_date %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.status_text %></td>
        <td class="visible-lg"><%= notification.notification_relations.first.try(:model).try(:class).try(:model_name).try(:human) %></td>
        <td class="visible-lg"><%= notification.user_who_confirm.full_name if notification.user_who_confirm %></td>
        <td><%= l notification.created_at, :format => :short %></td>
        <td class="visible-lg"><%= l notification.confirmation_date, :format => :short if notification.confirmation_date %></td>
        <td><%= link_to_show notification %></td>
        <td><%= link_to_edit edit_notification_path(notification) %></td>
        <td><%= link_to_confirm notification %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<div class="form-footer">
  <%= paginate @notifications %>
  <%= link_to_back %>
</div>
