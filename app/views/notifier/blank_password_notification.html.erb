<h2 style="margin-bottom: 1em;"><%=h @organization.name %></h2>
<h3><%= t(:'notifier.blank_password.body_title') %></h3>
<p>
  <% link_valid_until = (BLANK_PASSWORD_STALE_DAYS - 1).days.from_now.to_date -%>
  <% change_password_link = link_to t(:'notifier.change_password'),
    change_password_user_url(@user, :confirmation_hash => @hash,
      :host => (@organization.blank? ?
          URL_HOST : "#{@organization.prefix}.#{URL_HOST}"),
      :protocol => URL_PROTOCOL) -%>
  <%= textilize t(:'notifier.blank_password.valid_until',
    :link => change_password_link,
    :date => l(link_valid_until, :format => :long).strip) %>
</p>
<%= render :partial => 'footer' %>