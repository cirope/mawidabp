<div class="card-footer py-0">
  <div id="control_objective_item_change_history" class="collapse">
    <div>
      <h5><%= t 'control_objective_items.history.changes' %></h5>
      <ul class="mb-3">
        <% @control_objective_item.change_history.each do |history| %>
          <li>
            <%= history[:date] %>
            <ul>
              <li><%= t 'control_objective_items.history.action' %>: <%= history[:action] %></li>
              <li><%= User.model_name.human %>: <%= history[:user] %></li>
              <% history[:changes].each do |change| %>
                <li><%= change.keys.first %>: <%= change.values.first %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
