<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= simple_form_for @user, url: sessions_path, html: { data: { no_observe_changes: true } } do |f| %>
        <div class="form-inputs">
          <%= f.input :user, input_html: { maxlength: 30, autofocus: true } %>
          <%= f.input :password, input_html: { maxlength: 128 } %>
        </div>

        <div class="form-actions">
          <%= f.submit t('user.enter'), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
    <%= link_to(
      t('sessions.new.forgot_password'), reset_password_users_path
    ) %>
  </div>
</div>
