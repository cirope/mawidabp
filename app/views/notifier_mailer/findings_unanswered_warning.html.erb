<div style="font-family: arial, helvetica; font-size: 11px;">
  <% @grouped_findings.each do |organization, findings| %>
    <% Current.organization = organization %>
    <h3><%= t 'notifier.findings_unanswered_warning.body_title', count: findings.size %></h3>

    <% findings.each do |finding| %>
      <%= render partial: 'finding', locals: { finding: finding } %><br />
    <% end %>
  <% end %>

  <%= render partial: 'common_mailer/footer' %>
</div>
