<%= render 'header' %>

<div class="row help">
  <% if can?(:read, :administration_documents) && @documents_count > 0 %>
    <div class="col-md-4" data-document-list>
      <%= render 'documents/tag_list' %>
    </div>
  <% end %>

  <div class="col-md-<%= can?(:read, :administration_documents) && @documents_count > 0 ? 8 : 12 %>">
    <div class="row text-center">
      <div class="col-md-4">
        <div>
          <!--[if lt IE 9]>
            <img src="<%= image_path 'welcome/administration.png'  %>" alt="Administración" height="60">
          <![endif]-->
          <!--[if gt IE 8]><!-->
            <embed src="<%= image_path 'welcome/administration.svg' %>" type="image/svg+xml" height="60">
          <!--<![endif]-->
        </div>

        <h3>Administración</h3>

        <p>
          Gestión de organizaciones, usuarios, privilegios y buenas prácticas
        </p>
      </div>

      <div class="col-md-4">
        <div>
          <!--[if lt IE 9]>
            <img src="<%= image_path 'welcome/planification.png'  %>" alt="Planificación" height="60">
          <![endif]-->
          <!--[if gt IE 8]><!-->
            <embed src="<%= image_path 'welcome/planification.svg' %>" type="image/svg+xml" height="60">
          <!--<![endif]-->
        </div>

        <h3>Planificación</h3>

        <p>Definición de periodos, recursos, planes y costos</p>
      </div>

      <div class="col-md-4">
        <div>
          <!--[if lt IE 9]>
            <img src="<%= image_path 'welcome/execution.png'  %>" alt="Ejecución" height="60">
          <![endif]-->
          <!--[if gt IE 8]><!-->
            <embed src="<%= image_path 'welcome/execution.svg' %>" type="image/svg+xml" height="60">
          <!--<![endif]-->
        </div>

        <h3>Ejecución</h3>

        <p>Soporte a la documentación de hallazgos</p>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-md-4">
        <div>
          <!--[if lt IE 9]>
            <img src="<%= image_path 'welcome/conclusion.png'  %>" alt="Conclusión" height="60">
          <![endif]-->
          <!--[if gt IE 8]><!-->
            <embed src="<%= image_path 'welcome/conclusion.svg' %>" type="image/svg+xml" height="60">
          <!--<![endif]-->
        </div>

        <h3>Conclusión</h3>

        <p>Valoración de los procesos</p>
      </div>

      <div class="col-md-4">
        <div>
          <!--[if lt IE 9]>
            <img src="<%= image_path 'welcome/follow_up.png'  %>" alt="Seguimiento" height="60">
          <![endif]-->
          <!--[if gt IE 8]><!-->
            <embed src="<%= image_path 'welcome/follow_up.svg' %>" type="image/svg+xml" height="60">
          <!--<![endif]-->
        </div>

        <h3>Seguimiento</h3>

        <p>Asistencia en la implementación de soluciones y mejoras</p>
      </div>

      <div class="col-md-4">
        <div>
          <!--[if lt IE 9]>
            <img src="<%= image_path 'welcome/help.png'  %>" alt="Ayuda" height="60">
          <![endif]-->
          <!--[if gt IE 8]><!-->
            <embed src="<%= image_path 'welcome/help.svg' %>" type="image/svg+xml" height="60">
          <!--<![endif]-->
        </div>

        <h3>Ayuda</h3>

        <p>
          Si tiene alguna duda sobre alguna funcionalidad o proceso, este es el mejor
          lugar para despejarla
        </p>
      </div>
    </div>
  </div>
</div>

<%= render 'footer' %>
