<%= render :partial => 'shared/filter_form',
  :locals => {:action => :qa_indicators, :extra_params => {},
  :forms => {:date_range => true}} %>
<% if @periods.present? %>
<% @periods.each do |period| %>
  <h1 class="simple_title with_border_bottom">
    <strong><%= "#{Period.model_name.human}: #{period.inspect}" %></strong>
  </h1>

  <% @indicators[period].each do |data| %>
    <% unless data[:column_data].blank? %>
      <table class="summary_table" style="margin: 0em 1em;">
        <thead>
          <tr>
            <% @columns.each do |col_name| %>
              <th style="width: 50%;"><%= col_name.last %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% data[:column_data].each do |row| %>
            <tr>
              <% @columns.each do |col_name| %>
                <% if col_name.first == 'value' && row[col_name.first] == '0.0%' %>
                  <td><%= t'follow_up_committee.qa_indicators.without_data' %></td>
                <% else %>
                  <td><%= row[col_name.first] %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="margin: 1em;">
        <em><%= t 'follow_up_committee.qa_indicators.without_audits_in_the_period' %></em>
      </p>
    <% end %>
  <% end %>
<% end %>
<% else %>
  <h1 class="simple_title with_border_bottom"><%= t 'follow_up_committee.qa_indicators.without_data' %></h1>
<% end %>

<div id="links">
  <%= link_to t('label.back'), :action => :index %> |
  <%= link_to_function t('label.download'),
    "Helper.showItem('#customize_report_form')" %>
</div>
<div id="customize_report_form" style="display: none;">
  <div>
  <%= render :partial => 'shared/customize_report_form', :locals => {
    :options => {
      :form_name => 'report',
      :url => request.query_parameters.merge(
        {:action => :create_qa_indicators, :_ts => Time.now.to_i}
      ),
      :fields => [
        {
          :name => :report_title,
          :label => t('customize_report_form.title'),
          :value => t('follow_up_committee.qa_indicators.title')
        },
        {
          :name => :report_subtitle,
          :label => t('customize_report_form.subtitle'),
          :value => t('follow_up_committee.qa_indicators.subtitle')
        }
      ]
    }
  } %>
  </div>
</div>
