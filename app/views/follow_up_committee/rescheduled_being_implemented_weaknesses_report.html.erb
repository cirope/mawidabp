<%= render :partial => 'shared/filter_form',
  :locals => {:action => :rescheduled_being_implemented_weaknesses_report, :extra_params => {},
  :forms => {:date_range => true, :rescheduling => true}} %>

<% if @weaknesses_data.present? %>
  <h1 class="center_title">
    <%= t('follow_up_committee.weakness_summary') %>
  </h1>

  <div id="showed_data">
    <% @weaknesses_data.each do |data| %>
      <hr><br>
      <% data.each do |weakness| %>
        <div class="show_item">
          <%= simple_format weakness %>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <p style="margin: 1em;">
    <em><%= t 'follow_up_committee.without_weaknesses' %></em>
  </p>
<% end %>

<div id="links">
  <%= link_to t('label.back'), :action => :index %> |
  <%= link_to t('label.download'), '#', :onclick =>
    "Helper.showItem('#customize_report_form'); return false;" %>
</div>
<div id="customize_report_form" style="display: none;">
  <div>
  <%= render :partial => 'shared/customize_report_form', :locals => {
    :options => {
      :form_name => 'report',
      :url => request.query_parameters.merge(
        {:action => :create_rescheduled_being_implemented_weaknesses_report, :_ts => Time.now.to_i}
      ),
      :fields => [
        {
          :name => :report_title,
          :label => t('customize_report_form.title'),
          :value => t('follow_up_committee.rescheduled_being_implemented_weaknesses_report.title')
        },
        {
          :name => :report_subtitle,
          :label => t('customize_report_form.subtitle'),
          :value => ''
        }
      ]
    }
  } %>
  </div>
</div>
