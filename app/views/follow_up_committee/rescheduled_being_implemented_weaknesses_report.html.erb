<%= render :partial => 'shared/filter_form',
  :locals => {:action => :rescheduled_being_implemented_weaknesses_report, :extra_params => {},
  :forms => {:date_range => {:avoid_inline_help => true}, :rescheduling => true}} %>

<% if @weaknesses_data.present? %>
  <h2 class="text-center">
    <%= t('follow_up_committee_report.weakness_summary') %>
  </h2>

  <% @weaknesses_data.each do |data| %>
    <hr><br>
    <% data.each do |weakness| %>
      <div><%= simple_format weakness %></div>
    <% end %>
  <% end %>
<% else %>
  <p style="margin: 1em;">
    <em><%= t 'follow_up_committee_report.without_weaknesses' %></em>
  </p>
<% end %>

<hr />

<div class="form-footer">
  <%= link_to t('label.back'), :action => :index %> |
  <%= link_to t('label.download'), '#',
    data: { toggle: 'modal', target: "#customize_report" } %>
</div>

<%= render :partial => 'shared/customize_report_form', :locals => {
  :options => {
    :form_name => 'report',
    :url => request.query_parameters.merge(
      {:action => :create_rescheduled_being_implemented_weaknesses_report, :_ts => Time.now.to_i}
    ),
    :fields => [
      {
        :name => :report_title,
        :label => t('customize_report_form.title'),
        :value => t('follow_up_committee_report.rescheduled_being_implemented_weaknesses_report.title')
      },
      {
        :name => :report_subtitle,
        :label => t('customize_report_form.subtitle'),
        :value => ''
      }
    ]
  }
} %>
