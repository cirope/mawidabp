<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_tag mfa_sessions_url, novalidate: 'novalidate', data: { no_observe_changes: true } do %>
      <div class="card mb-3">
        <div class="card-header text-center bg-white border-white pt-5 pb-4">
          <%= image_tag 'logo.svg', alt: t('app_name'), height: 27 %>
        </div>
        <div class="card-body py-0 px-5">
          <div class="form-inputs">
            <div class="mb-3 form-group">
              <%= label_tag :mfa_code, t('.mfa_code'), class: 'col-form-label' %>
              <div class="controls">
                <%= text_field_tag :mfa_code, params[:mfa_code], class: 'form-control form-control-lg',
                  autofocus: true, autocomplete: 'off', maxlength: 255 %>
              </div>
              <%= image_tag @auth_user.google_qr_uri unless @auth_user.mfa_done %>
            </div>
          </div>
        </div>

        <div class="card-footer text-center bg-white border-white pb-4">
          <div class="form-actions">
            <%= submit_tag t('mfa_sessions.send_code'), class: 'btn btn-lg btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
