<%= render :partial => 'shared/filter_form',
  :locals => {:action => :high_risk_weaknesses_report, :extra_params => {},
  :forms => {:date_range => true, :business_unit => true}} %>

<% @periods.each do |period| %>
  <% unless @notorious_reviews[period].blank? %>
    <h1 class="simple_title with_border_bottom">
      <strong><%= "#{Period.model_name.human}: #{period.inspect}" %></strong>
    </h1>

    <% @notorious_reviews[period].each do |data| %>
      <% if !data[:external] && !@internal_title_showed %>
        <h1 class="center_title">
          <%= t :'conclusion_committee_report.high_risk_weaknesses_report.internal_audit_weaknesses' %>
        </h1>
        <% @internal_title_showed = true %>
      <% elsif data[:external] && !@external_title_showed %>
        <h1 class="center_title">
          <%= t :'conclusion_committee_report.high_risk_weaknesses_report.external_audit_weaknesses' %>
        </h1>
        <% @external_title_showed = true %>
      <% end %>
      <h1 style="margin: 1em;"><%= data[:name] %></h1>
      <% unless data[:column_data].blank? %>
        <table class="summary_table" style="margin: 0em 1em;">
          <thead>
            <tr>
              <% @column_order.each do |col_name| %>
                <% column = data[:columns][col_name] %>
                <th style="width: <%= "#{column.last}%" %>;"><%= column.first %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% data[:column_data].each do |row| %>
              <tr>
                <% @column_order.each do |col_name| %>
                  <td><%= row[col_name].kind_of?(Array) ?
                    array_to_ul(row[col_name], :class => :raw_list) :
                    row[col_name] %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p style="margin: 1em;">
          <em><%= t :'conclusion_committee_report.high_risk_weaknesses_report.without_audits_in_the_period' %></em>
        </p>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div id="links">
  <%= link_to t(:'label.back'), :action => :index %> |
  <%= link_to_function t(:'label.download'),
    "Helper.showItem('#customize_report_form')" %>
</div>
<div id="customize_report_form" style="display: none;">
  <div>
  <%= render :partial => 'shared/customize_report_form', :locals => {
    :options => {
      :form_name => 'report',
      :url => request.query_parameters.merge(
        {:action => :create_high_risk_weaknesses_report, :_ts => Time.now.to_i}
      ),
      :fields => [
        {
          :name => :report_title,
          :label => t(:'customize_report_form.title'),
          :value => t(:'conclusion_committee_report.high_risk_weaknesses_report.title')
        },
        {
          :name => :report_subtitle,
          :label => t(:'customize_report_form.subtitle'),
          :value => t(:'conclusion_committee_report.high_risk_weaknesses_report.subtitle')
        }
      ]
    }
  } %>
  </div>
</div>