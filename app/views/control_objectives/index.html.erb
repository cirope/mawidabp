<%= render partial: 'shared/search', locals: {
  options: {},
  columns: search_columns_for_model(ControlObjective)
} %>
<table class="table table-sm table-striped table-hover">
  <thead id="column_headers">
    <tr>
      <%= make_filterable_column BestPractice.model_name.human, { class: 'd-none d-sm-table-cell' }, 'best_practice' %>
      <%= make_filterable_column ControlObjective.human_attribute_name('name'), nil, 'name' %>
      <th class="text-right"><%= link_to_search %></th>
    </tr>
  </thead>

  <tbody>
    <% @control_objectives.each do |control_objective| %>
      <tr <%== 'class="text-muted strike"' if control_objective.obsolete %>>
        <td class="d-none d-sm-table-cell"><%= super_truncate(control_objective.best_practice.name, 40) %></td>
        <td><%= super_truncate control_objective.name, 40 %></td>
        <td class="text-right"><%= link_to_show control_objective %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<%= paginate @control_objectives %>
