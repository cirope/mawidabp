<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <% if show_menu? %>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      <% end %>

      <%= link_to root_url, class: 'navbar-brand', title: t('app_name') do %>
        <!--[if lt IE 9]>
          <img src="<%= image_path "#{header_logo_name}.png" %>" alt="<%= t 'app_name' %>" height="17">
        <![endif]-->
        <!--[if gt IE 8]><!-->
          <img src="<%= image_path "#{header_logo_name}.svg" %>" alt="<%= t 'app_name' %>" height="17">
        <!--<![endif]-->
      <% end %>
    </div>

    <div class="collapse navbar-collapse">
      <% if show_menu? %>
        <ul class="nav navbar-nav">
          <%= show_unanswered_poll_link %>

          <%= render(
            partial:    'shared/menu_item',
            collection: @auth_user.get_menu
          ) %>
        </ul>
        <%= render partial: 'shared/user_actions', locals: { user: @auth_user } %>
      <% elsif show_logout? %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to t('navigation.logout'), logout_path, data: { method: :delete } %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
