<div class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <%= link_to root_url, class: 'navbar-brand', title: t('app_name') do %>
      <%= image_tag "#{header_logo_name}.svg", alt: t('app_name'), height: 17 %>
    <% end %>

    <% if show_menu? %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% end %>

    <div class="collapse navbar-collapse" id="menu">
      <% if show_menu? %>
        <ul class="navbar-nav me-auto">
          <%= show_unanswered_poll_link %>

          <%= render(
            partial:    'shared/menu_item',
            collection: @auth_user.get_menu
          ) %>
        </ul>

        <%= render partial: 'shared/user_actions', locals: { user: @auth_user } %>
      <% elsif show_logout? %>
        <div class="navbar-nav me-auto">
        </div>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to t('navigation.logout'), logout_path, class: 'nav-link', data: { method: :delete } %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
