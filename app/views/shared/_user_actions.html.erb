<ul class="navbar-nav">
  <li class="nav-item">
    <a class="nav-link" href="/help" target="_blank" title="<%= t 'menu.help_title' %>">
      <%= icon 'fas', 'question-circle' %>
    </a>
  </li>

  <li class="nav-item dropdown">
    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
      <%= icon 'fas', 'user' %>
    </a>

    <div class="dropdown-menu dropdown-menu-right">
      <% if current_organization && (current_organization.ldap_config.blank? && current_organization.saml_provider.blank?) %>
        <%= link_to t('users.profiles.edit.title'), edit_users_profile_path(user), class: 'dropdown-item' %>
      <% else %>
        <%= link_to t('users.status.show.title'), users_status_path(user, graph: true), class: 'dropdown-item' %>
      <% end %>
      <div class="dropdown-divider"></div>
      <% if SHARED_SESSION && @auth_user.current_organizations.exists? %>
        <div class="dropdown-header">
          <%= t 'navigation.change_to_organization' %>
        </div>
        <% @auth_user.current_organizations.ordered.each do |organization| %>
          <%= link_to organization.name.truncate(30), welcome_url(subdomain: organization.prefix), class: 'dropdown-item' %>
        <% end %>
        <div class="dropdown-divider"></div>
      <% end %>
      <%= link_to t('navigation.logout'), logout_path, class: 'dropdown-item', data: { method: :delete } %>
    </div>
  </li>
</ul>

<%= render 'shared/time_left' %>
<%= render 'shared/messages' %>
