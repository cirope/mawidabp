<div id="business_unit_filter" <%== 'style="display: none;"' unless display %>>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-1 form-group row">
        <% selected = params[action] ? params[action][:business_unit_type] : nil %>
        <%= f.label :business_unit_type, BusinessUnitType.model_name.human, class: 'col-md-4 col-form-label', for: nil %>
        <div class="col-md-8">
          <%= f.input :business_unit_type,
            collection: BusinessUnitType.list.map { |but| [but.name, but.id.to_s] },
            as: :check_boxes,
            label: '&nbsp;'.html_safe,
            required: false,
            checked: selected,
            class: 'form-control',
            item_wrapper_class: 'custom-control custom-checkbox',
            wrapper_html: { class: 'mt-n3' }
          %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-1 form-group row">
        <% business_unit_filter = params[action] ? params[action][:business_unit] : nil %>
        <%= f.label :business_unit, BusinessUnit.model_name.human, class: 'col-md-4 col-form-label' %>
        <div class="col-md-8">
          <%= f.text_field :business_unit, value: business_unit_filter, maxlength: 3072,
          class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
</div>
