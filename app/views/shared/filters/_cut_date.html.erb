<% group ||= nil %>
<% label ||= t 'conclusion_committee_report.cut_date' %>

<% unless group %>
  <div id="cut_date_filter" class="row" <%== 'style="display: none;"' unless display %>>
<% end %>
  <div class="col-md-6" <%== 'style="display: none;"' unless display %>>
    <div class="form-group row">
      <%= f.label :cut_date, label, class: 'col-md-4 col-form-label' %>
      <div class="col-md-8">
        <%= f.text_field :cut_date, value: l(@cut_date), autocomplete: :off,
          class: 'form-control', data: { date_picker: true } %>
      </div>
    </div>
  </div>
<% unless group %>
  </div>
<% end %>
