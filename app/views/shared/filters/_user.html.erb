<div id="user_filter" class="filter" <%= 'style="display: none;"' unless display %>>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <% user = params[action] && params[action][:user] %>

        <%= f.label :user, User.model_name.human, class: 'col-md-3' %>

        <div class="col-md-9">
          <%= f.text_field :user,
            value: user,
            title: t('label.search'),
            autofocus: true,
            class: 'form-control',
            data: {
              clear: 'user',
              autocomplete_url: users_completions_path,
              autocomplete_id_target: '#weaknesses_report_user_id'
            }
          %>
          <%= f.hidden_field :user_id, value: params[action] && params[action][:user_id] %>
        </div>
      </div>
    </div>
  </div>
</div>
