<% group ||= nil %>
<% show_latest =  params[:weaknesses_report].nil? ? '1' : params[:weaknesses_report][:show_latest].to_s %>
<% unless group %>
  <div id="repeated_filter" class="row" <%== 'style="display: none;"' unless display %>>
<% end %>
  <div class="col-md-6" <%== 'style="display: none;"' unless display %>>
    <div class="form-group row">
      <% selected = params[action] ? params[action][:repeated] : nil %>
      <%= f.label :repeated, t('findings.state.repeated'), class: 'col-md-4 col-form-label' %>
      <div class="col-md-8">
        <%= f.select :repeated, [[t('label.yes'), true], [t('label.no'), false]],
          { selected: selected, include_blank: t('helpers.select.prompt') },
          class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="col-md-6" <%== 'style="display: none;"' unless display %>>
      <div>
        <%= f.input :show_latest, as: :boolean,
          label: t('shared.filters.repeated.allow_latest'),
          wrapper_html: { class: 'my-3' },
          input_html: { checked: show_latest == '1'}%>
      </div>
  </div>
<% unless group %>
  </div>
<% end %>
