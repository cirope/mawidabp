<div id="risk_levels_filter" class="filter" <%= 'style="display: none;"' unless display %>>
  <div>
    <table class="generic_filter">
      <tbody>
        <tr>
          <td>
            <p class="form_item" style="margin: 0em;">
              <% selected = params[action] ?
                params[action][:risk_levels] : nil %>
              <%= f.label :risk, Weakness.human_attribute_name(:risk),
                :class => :inline %>
              <%= f.select :risk, parameter_in(@auth_organization.id, :admin_finding_risk_levels, nil, false),
                {:selected => selected}, {:class => :inline_item} %>
            </p>
          </td>
          <td>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
