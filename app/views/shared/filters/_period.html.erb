<% group ||= nil %>

<% unless group %>
  <div id="period_filter" class="row" <%== 'style="display: none;"' unless display %>>
<% end %>
  <div class="col-md-6" <%== 'style="display: none;"' unless display %>>
    <div class="mb-1 form-group row">
      <% selected = params[action] ? params[action][:period] : nil %>
      <%= f.label :period, Period.model_name.human, class: 'col-md-4 col-form-label' %>
      <div class="col-md-8">
        <%= f.select :period, period_filter, { selected: selected, include_blank: t('helpers.select.prompt') }, class: 'form-select' %>
      </div>
    </div>
  </div>
<% unless group %>
  </div>
<% end %>
