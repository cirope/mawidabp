<div id="answered_filter" <%== 'style="display: none;"' unless display %>>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-1 form-group row">
        <% selected = params[action] ? params[action][:answered] : nil %>
        <%= f.label :answered, Poll.human_attribute_name(:answered), class: 'col-md-4 col-form-label' %>
        <div class="col-md-8">
          <%= f.select :answered, [[t('label.yes'), true], [t('label.no'), false]],
            { selected: selected, include_blank: t('helpers.select.prompt') },
            class: 'form-select' %>
        </div>
      </div>
    </div>
  </div>
</div>
