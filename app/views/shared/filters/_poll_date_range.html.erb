<div id="poll_date_filter" class="filter" <%== 'style="display: none;"' unless display %>>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :from_date,
          t('conclusion_committee_report.from_date'), class: 'col-md-4' %>
        <div class="col-md-8">
          <%= f.text_field :from_date, value: l(@from_date), autocomplete: :off,
            class: 'form-control', data: { date_picker: true } %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :to_date,
          t('conclusion_committee_report.to_date'), class: 'col-md-4' %>
        <div class="col-md-8">
          <%= f.text_field :to_date, value: l(@to_date), autocomplete: :off,
            class: 'form-control', data: { date_picker: true } %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="filter" <%== 'style="display: none;"' unless display %>>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <% selected = params[action] ? params[action][:date_field] : 'created_at' %>
        <%= f.label :date_field, t('conclusion_committee_report.date_field'), class: 'col-md-4' %>
        <div class="col-md-8">
          <%= f.select :date_field, [
              [t('conclusion_committee_report.created_at'), 'created_at'],
              [t('conclusion_committee_report.issue_date'), 'issue_date']
            ], { selected: selected }, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
</div>
