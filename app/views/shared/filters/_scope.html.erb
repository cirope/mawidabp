<div id="scope_filter" <%== 'style="display: none;"' unless display %>>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-1 form-group row">
        <% selected = params[action] ? params[action][:scope] : nil %>
        <%= f.label :scope, Review.human_attribute_name('scope'), class: 'col-md-4 col-form-label' %>
        <div class="col-md-8">
          <%= f.select :scope, review_scope_options, { selected: selected, include_blank: t('helpers.select.prompt') }, class: 'form-select' %>
        </div>
      </div>
    </div>
  </div>
</div>
