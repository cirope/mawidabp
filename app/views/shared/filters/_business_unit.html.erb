<div id="business_unit_filter" <%== 'style="display: none;"' unless display %>>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-1 form-group row">
        <% selected = params[action] ? params[action][:business_unit_type] : nil %>
        <%= f.label :business_unit_type, BusinessUnitType.model_name.human, class: 'col-md-4 col-form-label' %>
        <div class="col-md-8">
          <%= f.select :business_unit_type, BusinessUnitType.allowed_business_unit_types.compact.map { |but| [but.name, but.id.to_s] },
            { include_blank: t('helpers.select.prompt'), selected: selected }, class: 'form-select' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-1 form-group row">
        <% business_unit_filter = params[action] ? params[action][:business_unit] : nil %>
        <%= f.label :business_unit, BusinessUnit.model_name.human, class: 'col-md-4 col-form-label' %>
        <div class="col-md-8">
          <%= f.text_field :business_unit, value: business_unit_filter, maxlength: 3072,
          class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
</div>
