<% group ||= nil %>

<% unless group %>
  <div id="business_unit_type_filter" class="row" <%== 'style="display: none;"' unless display %>>
<% end %>
  <div class="col-md-6" <%== 'style="display: none;"' unless display %>>
    <div class="form-group row">
      <% selected = params[action] ? params[action][:business_unit_type] : nil %>
      <%= f.label :business_unit_type, BusinessUnitType.model_name.human, class: 'col-md-4 col-form-label', for: nil %>
      <div class="col-md-8">
        <%= f.input :business_unit_type,
          collection: BusinessUnitType.list.map { |but| [but.name, but.id.to_s] },
          as: :check_boxes,
          label: '&nbsp;'.html_safe,
          required: false,
          checked: selected,
          class: 'form-control',
          item_wrapper_class: 'custom-control custom-checkbox',
          wrapper_html: { class: 'mt-n3' }
        %>
      </div>
    </div>
  </div>
<% unless group %>
  </div>
<% end %>
