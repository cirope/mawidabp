<% if @conclusion_final_review.review %>
  $('#conclusion_final_review_applied_procedures').val('<%== j @conclusion_final_review.applied_procedures %>')
  $('#conclusion_final_review_conclusion').val('<%== j @conclusion_final_review.conclusion %>')
  $('#conclusion_final_review_evolution').val('<%== j @conclusion_final_review.evolution %>')
  $('#conclusion_final_review_evolution_justification').val('<%== j @conclusion_final_review.evolution_justification %>')
  $('#conclusion_final_review_recipients').val('<%== j @conclusion_final_review.recipients %>')
  $('#conclusion_final_review_sectors').val('<%== j @conclusion_final_review.sectors %>')
  $('#conclusion_final_review_main_weaknesses_text').val('<%== j @conclusion_final_review.main_weaknesses_text %>')
  $('#conclusion_final_review_corrective_actions').val('<%== j @conclusion_final_review.corrective_actions %>')
  $('#conclusion_final_review_observations').val('<%== j @conclusion_final_review.observations %>')
  $('#conclusion_final_review_affects_compliance').prop('checked', <%= @conclusion_final_review.affects_compliance.inspect %>)
  $('#conclusion_final_review_collapse_control_objectives').prop('checked', <%= @conclusion_final_review.collapse_control_objectives.inspect %>)
  $('#conclusion_final_review_business_unit').val('<%= j @conclusion_final_review.review.business_unit.name %>')
  $('#conclusion_final_review_project').val('<%= j @conclusion_final_review.review.plan_item.project %>')
  $('#conclusion_final_review_score').val('<%= j @conclusion_final_review.review.score_text %>')
  $('#conclusion_final_review_previous_identification').val('<%== j @conclusion_final_review.previous_identification %>')
  $('#conclusion_final_review_previous_date').val('<%== l @conclusion_final_review.previous_date if @conclusion_final_review.previous_date %>')
  $('#conclusion_final_review_reference').val('<%== j @conclusion_final_review.reference %>')
  $('#conclusion_final_review_scope').val('<%== j @conclusion_final_review.scope %>')

  $('#conclusion_final_review_review_attributes_description').val('<%== j @conclusion_final_review.review.description %>')

  $('#best_practice_comments_container').html('<%= j best_practice_comments_form(@conclusion_final_review) %>')
<% else %>
  var elementsForUpdate = [
    'applied_procedures',
    'conclusion',
    'evolution',
    'evolution_justification',
    'recipients',
    'sectors',
    'main_weaknesses_text',
    'corrective_actions',
    'observations',
    'business_unit',
    'project',
    'score',
    'previous_identification',
    'previous_date',
    'reference',
    'scope'
  ]

  $.each(elementsForUpdate, function (i, e) {
    $('#conclusion_final_review_' + e).val('')
  })

  $('#conclusion_final_review_affects_compliance').prop('checked', false)
  $('#conclusion_final_review_collapse_control_objectives').prop('checked', false)
  $('#conclusion_final_review_review_attributes_description').val('')

  $('#best_practice_comments_container').html('')
<% end %>
