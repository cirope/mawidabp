<%= render :partial => 'shared/search', :locals => {
  :options => {},
  :columns => @query.blank? ?
    ConclusionDraftReview::COLUMNS_FOR_SEARCH.keys : @columns
} %>
<table>
  <thead id="column_headers">
    <tr>
      <%= make_not_available_column ConclusionDraftReview.human_attribute_name(:issue_date) %>
      <%= make_filterable_column Review.human_attribute_name(:period_id), 'period' %>
      <%= make_filterable_column Review.human_attribute_name(:identification), 'identification' %>
      <%= make_filterable_column PlanItem.human_attribute_name(:business_unit_id), 'business_unit' %>
      <%= make_filterable_column PlanItem.human_attribute_name(:project), 'project' %>
      <th colspan="2" style="text-align: right;"><%= link_to_search %></th>
    </tr>
  </thead>

  <tbody>
    <% @conclusion_final_reviews.each do |conclusion_final_review| -%>
      <tr class="<%= cycle(:even, :odd) %>">
        <td><%= l(conclusion_final_review.issue_date, :format => :short) if conclusion_final_review.issue_date %></td>
        <td><%= show_period_with_dates_as_acronym conclusion_final_review.review.period %></td>
        <td class="nowrap"><%= h conclusion_final_review.review.identification %></td>
        <td><%= super_truncate(conclusion_final_review.review.plan_item.business_unit.name, 25) %></td>
        <td><%= super_truncate(conclusion_final_review.review.plan_item.project, 30) %></td>
        <td><%= link_to_show conclusion_final_review %></td>
        <td><%= link_to_edit edit_conclusion_final_review_path(conclusion_final_review) %></td>
      </tr>
    <% end -%>
  </tbody>
</table>

<div id="links">
  <%= pagination_links @conclusion_final_reviews %>
  <%= link_to t(:'label.new'), new_conclusion_final_review_path %>
<div style="clear: both;"></div>
</div>