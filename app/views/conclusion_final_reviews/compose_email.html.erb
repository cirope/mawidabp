<%= simple_form_for @conclusion_final_review,
  url: send_by_email_conclusion_final_review_path(@conclusion_final_review) do |f| %>
  <% content_for :js_extra do %>
    <%= raw "var user='" + escape_javascript(render :partial => 'user',
      :locals => {:user => User.new, :is_dynamic => true}) + "';" %>
  <% end %>
  <%= render 'shared/error_explanation', f: f %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label t('conclusion_review.include_global_score_sheet'),
            for: :conclusion_review_include_global_score_sheet %>
          <%= check_box_tag 'conclusion_review[include_global_score_sheet]', 1, false %>
        </div>
        <div class="form-group">
          <%= content_tag :label, t('conclusion_review.include_score_sheet'),
            for: :conclusion_review_include_score_sheet %>
          <%= check_box_tag 'conclusion_review[include_score_sheet]', 1, false %>
        </div>
        <div class="form-group">
          <%= content_tag :label, t('conclusion_final_review.hide_control_objectives_excluded_from_score'),
            for: :export_options_hide_control_objectives_excluded_from_score %>
          <%= check_box_tag 'export_options[hide_control_objectives_excluded_from_score]', 1, false %>
        </div>
        <%= f.input :conclusion_review_email_note, input_html: { rows: 5 } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h5><strong><%= User.model_name.human %></strong></h5>
    </div>
    <div class="col-md-4">
      <h5><strong><%= t 'poll.answer_poll' %></strong></h5>
    </div>
  </div>

  <div id="users">
    <% @conclusion_final_review.review.users.each do |user| %>
      <%= render 'user', user: user %>
    <% end %>

    <%= link_to_add_fields(t('conclusion_review.add_recipient'), f, :users) %>
  </div>

  <hr />

  <div class="form-actions form-footer">
    <div class="pull-right">
      <%= link_to_edit edit_conclusion_final_review_path(@conclusion_final_review) %> |
      <%= link_to t('label.list'), conclusion_final_reviews_path %> |
      <%= link_to_back %>
    </div>
    <%= f.submit t('label.send'), class: 'btn btn-primary' %>
  </div>
<% end %>
