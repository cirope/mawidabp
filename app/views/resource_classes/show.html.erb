<p>
  <strong><%= raw(ResourceClass.human_attribute_name(:name) +
      show_inline_help_for(:resource_class_name)) %>:</strong>
  <%= @resource_class.name %>
</p>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= Resource.human_attribute_name :name %></th>
      <th><%= Resource.human_attribute_name :description %></th>
      <th><%= Resource.human_attribute_name :cost_per_unit %></th>
    </tr>
  </thead>
  <tbody>
    <% @resource_class.resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= resource.description %></td>
        <td><%= resource.cost_per_unit %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<div class="form-footer">
  <%= link_to_edit edit_resource_class_path(@resource_class) %> |
  <%= link_to t('label.list'), resource_classes_path %> |
  <%= link_to_back %>
</div>
