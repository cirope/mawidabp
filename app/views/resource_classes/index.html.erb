<div class="card">
  <div class="card-body">
    <table class="table table-sm table-striped table-hover">
      <thead>
        <tr>
          <th><%= ResourceClass.human_attribute_name 'name' %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @resource_classes.each do |resource_class| %>
          <tr>
            <td><%= resource_class.name %></td>
            <td class="text-end"><%= link_to_show resource_class %></td>
            <td class="text-end"><%= link_to_edit edit_resource_class_path(resource_class) %></td>
            <td class="text-end"><%= link_to_destroy resource_class %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @resource_classes %>
    <%= link_to_new new_resource_class_path, class: 'btn btn-primary' %>
  </div>
</div>
