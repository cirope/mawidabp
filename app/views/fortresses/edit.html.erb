<%= content_for :form_actions do %>
  <%= link_to_show @fortress %> |
  <%= link_to_index fortress_path %> |
  <% if @fortress.control_objective_item %>
    <%= link_to t('fortress.edit_control_objective'),
      edit_control_objective_item_path(@fortress.control_objective_item) %> |
  <% end %>
  <% if !@fortress.is_in_a_final_review? %>
    <%= link_to t('fortress.edit_follow_up'), edit_finding_path('incomplete', @fortress) %> |
  <% end %>
  <%= link_to_back %>
<% end %>

<%= render 'form' %>
