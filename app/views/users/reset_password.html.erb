<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= simple_form_for :user, :url => send_password_reset_users_path do |f| %>
        <p class="text-muted">
          <%= t('user.reset_password_note') %>
        </p>
        <div class="form-inputs">
          <%= f.input :email, label: User.human_attribute_name('email'), input_html: { maxlength: 100, autofocus: true } %>
        </div>
        <div class="form-actions">
          <%= f.submit t('user.send'), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
    <%= link_to t('label.back'), login_path %>
  </div>
</div>
