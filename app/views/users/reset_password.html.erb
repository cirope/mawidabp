<div id="reset_password">
  <div id="logo">
    <%= image_tag 'logo_mini.gif', :size => '139x36', :alt => t('app_name') %>
  </div>
  
  <!--[form:user]-->
  <%= form_for :user, :url => send_password_reset_users_path do |f| %>
    <p class="note"><%= t('user.reset_password_note') %></p>
    <p>
      <%= label_tag :email, User.human_attribute_name('email') %>
      <%= text_field_tag :email, '', :maxlength => 100, :size => nil, :autofocus => true %>
    </p>
    <div class="submit">
      <span class="button"><%= f.submit t('user.send') %></span>
      <%= link_to t('label.back'), login_users_path %>
    </div>
  <% end %>
  <!--[eoform:user] -->
</div>