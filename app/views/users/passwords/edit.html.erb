<%= simple_form_for @auth_user, url: users_password_path(@auth_user) do |f| %>
  <%= render 'shared/error_explanation', f: f %>

  <h2 class="text-center text-muted"><%= @title %></h2>
  <br />

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <div class="form-inputs">
          <%= f.input :password, label: t('.new_password'), input_html: { autofocus: true } %>
          <%= f.input :password_confirmation %>
        </div>

        <div class="form-actions">
          <%= hidden_field_tag :confirmation_hash, confirmation_hash %>
          <%= f.input :lock_version, as: :hidden %>
          <%= f.submit t('.update'), class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
