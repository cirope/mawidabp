<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p class="lead text-muted"><%= t('.note') %></p>
    <div class="well">
      <%= simple_form_for :user, url: users_passwords_path, html: { data: { no_observe_changes: true } } do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: t('.email'), input_html: { maxlength: 100, autofocus: true } %>
        </div>
        <div class="form-actions">
          <%= f.submit t('.send_instructions'), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
    <%= link_to t('.back'), login_path %>
  </div>
</div>
