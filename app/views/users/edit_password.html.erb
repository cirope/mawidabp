<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center"><%= @title %></h2>
    <br />

    <div class="well">
      <%= simple_form_for @auth_user, url: update_password_user_path(@auth_user) do |f| %>
        <%= render 'shared/error_explanation', f: f %>

        <div class="form-inputs">
          <%= f.input :password, label: t('user.new_password'),
            input_html: { maxlength: 128, autofocus: true } %>
          <%= f.input :password_confirmation, input_html: { maxlength: 128 } %>
        </div>

        <div class="form-actions">
          <%= f.input :confirmation_hash, as: :hidden %>
          <%= f.input :lock_version, as: :hidden %>
          <%= f.submit t('label.save'), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
