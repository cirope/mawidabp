<%= form_for @user, :url => release_update_user_path(@user) do |f| %>
  <%= f.error_messages %>
  <p class="form_item">
    <%= content_tag :label, t(:'user.release_with_findings'),
      :class => :inline, :for => :user_with_findings, :style => 'width: 40em;' %>
    <%= check_box_tag 'user[with_findings]', 1, true, :autofocus => true,
      :class => :inline_item %>
  </p>
  <p class="form_item">
    <%= content_tag :label, t(:'user.release_with_reviews'),
      :class => :inline, :for => :user_with_reviews, :style => 'width: 40em;' %>
    <%= check_box_tag 'user[with_reviews]', 1, true, :class => :inline_item %>
  </p>

  <% unless @user.reallocation_errors.blank? %>
    <p style="margin: 1em 0em;">
      <%= link_to_function t(:'label.details'),
        "$('#error_details').slideToggle()", :class => 'bold red' %>
      <div id="error_details" style="display: none; margin-top: 1em;">
        <%= array_to_ul(@user.reallocation_errors, :class => :raw_list) %>
      </div>
    </p>
  <% end %>

  <h1 class="clear"><%= User.model_name.human %></h1>
  <p>
    <b><%= User.human_attribute_name 'user' %>:</b>
    <%=h @user.user %>
  </p>

  <p>
    <b><%= User.human_attribute_name 'name' %>:</b>
    <%=h @user.name %>
  </p>

  <p>
    <b><%= User.human_attribute_name 'last_name' %>:</b>
    <%=h @user.last_name %>
  </p>
  <p>
    <span class="button"><%= f.submit t(:'user.release') %></span>
  </p>
<% end %>

<div id="links">
  <%= link_to t(:'label.list'), users_path %> |
  <%= link_to t(:'label.show'), @user %> |
  <%= link_to t(:'label.edit'), edit_user_path(@user) %> |
  <%= link_to_back %>
</div>