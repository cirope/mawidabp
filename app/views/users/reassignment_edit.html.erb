<%= simple_form_for @user, url: reassignment_update_user_path(@user) do |f| %>
  <%= f.error_messages %>

  <div class="form-inputs">
    <p>
      <%= content_tag :label, t('user.reassign_with_findings'),
        :for => :user_with_findings, :style => 'width: 20em;' %>
      <%= check_box_tag 'user[with_findings]', 1, true, :autofocus => true %>
    </p>
    <p>
      <%= content_tag :label, t('user.reassign_with_reviews'),
        :for => :user_with_reviews, :style => 'width: 20em;' %>
      <%= check_box_tag 'user[with_reviews]', 1, true %>
    </p>

    <% unless @user.reallocation_errors.blank? %>
      <p>
        <%= link_to t('label.details'), '#', :onclick =>
          "$('#error_details').slideToggle(); return false;", class: 'text-danger' %>
        <div id="error_details" style="display: none; margin-top: 1em;">
          <%= array_to_ul(@user.reallocation_errors ) %>
        </div>
      </p>
    <% end %>

    <div class="page-header">
      <h3><%= t('user.new_user_label') %></h3>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :user_data, label: false, input_html: {
          name: 'auto_user_id', autocomplete: :off,
          class: 'autocomplete_field', title: t('label.search'),
          data: {
            autocomplete_url: auto_complete_for_user_users_path,
            autocomplete_id_target: '#hidden_user_id'
          }
        } %>
        <%= f.input :id, as: :hidden, input_html: { id: 'hidden_user_id' } %>
      </div>
    </div>
  </div>

  <div class="page-header">
    <h3><%= t('user.old_user_label') %></h3>
  </div>
  <p>
    <strong><%= User.human_attribute_name :user %>:</strong>
    <%= @user.user %>
  </p>

  <p>
    <strong><%= User.human_attribute_name :name %>:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong><%= User.human_attribute_name :last_name %>:</strong>
    <%= @user.last_name %>
  </p>

  <hr />

  <div class="form-actions form-footer">
    <div class="pull-right">
      <%= link_to t('label.list'), users_path %> |
      <%= link_to_show @user %> |
      <%= link_to_edit edit_user_path(@user) %> |
      <%= link_to_back %>
    </div>
    <%= f.submit t('user.reassign'), class: 'btn btn-default' %>
  </div>
<% end %>
