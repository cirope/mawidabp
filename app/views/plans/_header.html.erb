<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <%= Plan.human_attribute_name 'period_id' %>
        </h4>
      </div>

      <div class="panel-body">
        <p>
          <strong><%= @plan.period.inspect %></strong>
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <%= Plan.human_attribute_name 'estimated_amount' %>
        </h4>
      </div>

      <div class="panel-body">
        <p>
          <strong><%= plan_cost %></strong>
        </p>
      </div>
    </div>
  </div>
</div>
