<% unless @users.empty? %>
  <ul>
    <% @users.each do |u| %>
      <li id="dynamic_result_<%= "#{rand(100000)}_id_#{u.id}" %>">
        <%= highlight(h(u.full_name_with_resource), @tokens) %>
        <span class="informal aditional_info">
          <%= highlight(h(u.user), @tokens) %>
          <%= hidden_field_tag "cost_of_#{u.id}",
            u.resource.try(:cost_per_unit), :id => "cost_of_#{u.id}" %>
        </span>
      </li>
    <% end %>
  </ul>
<% else %>
  <ul style="display: none;"><li></li></ul>
  <p class="empty_result"><%= t(:'message.empty_result') %></p>
<% end %>