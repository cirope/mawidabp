<% id = f.object.object_id %>
<fieldset class="material_resource_utilization">
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-4 col-md-offset-1">
        <%= plan_resource_field(f, id, false) %>
      </div>
      <div class="col-md-3">
        <%= f.input :units, label: false %>
      </div>
      <div class="col-md-3">
        <%= f.input :cost_per_unit, label: false, input_html: { id: "#{id}_cost_per_unit" } %>
      </div>
      <div class="col-md-1">
        <div class="show_hide">
          <%= link_to_insert_field(f, 'material_resource_utilizations') %>
          <span class="text-muted">|</span>
          <%= link_to_remove_nested_item(f) %>
          <%= f.input :resource_type, as: :hidden %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
<script type="text/javascript">
(function() {
  var id = '#<%= id %>_resource_id';

  $(id).change(function() {
    var url = '<%= resource_data_plans_path %>';

    Helper.showLoading(id);

    $.get(url, { id: $(this).val(), format: 'json' }, function(data) {
      $('#<%= id %>_cost_per_unit').val(data.cost_per_unit || '');
    }).complete(function() {
      Helper.hideLoading(id);
    });
  });
})();
</script>
