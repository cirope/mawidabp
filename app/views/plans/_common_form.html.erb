<div class="form-inputs">
  <div class="row">
    <div class="col-md-6">
      <div class="card border-1 border-light mb-3">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <%= Plan.human_attribute_name 'period_id' %>
          </h5>
        </div>

        <div class="card-body">
          <% if @plan.new_record? %>
            <%= f.association :period, collection: Period.list_all_without_plans,
              label_method: :inspect, value_method: :id, prompt: true,
              label: false, input_html: { autofocus: true }
            %>
          <% else %>
            <strong>
              <%= @plan.period.inspect %>
            </strong>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card border-1 border-light mb-3">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <%= Plan.human_attribute_name 'estimated_amount' %>
          </h5>
        </div>

        <div class="card-body">
          <abbr title="<%= t 'plans.cost.human_resources' %>"><%= t 'plans.cost.human_resources_abbr' %></abbr>:
          <strong><%= plan_cost %></strong>,
          <abbr title="<%= t 'plans.cost.material_resources' %>"><%= t 'plans.cost.material_resources_abbr' %></abbr>:
          <strong><%= plan_material_cost %></strong>
        </div>
      </div>
    </div>
  </div>
</div>
