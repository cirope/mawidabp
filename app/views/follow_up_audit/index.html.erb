              { :action => :weaknesses_by_control_objective, :controller_name => 'follow_up', :final => false }, class: 'list-group-item list-group-item-action' %>
            <%= link_to t('follow_up_audit.weaknesses_heatmap_title'),
              { :action => :weaknesses_heatmap, :controller_name => 'follow_up', :final => false }, class: 'list-group-item list-group-item-action' %>
          <% end %>
          <%= link_to t('follow_up_audit.weaknesses_report.title'),
            { action: :weaknesses_report, controller_name: 'follow_up', final: false }, class: 'list-group-item list-group-item-action' %>
          <%= link_to t('follow_up_audit.tagged_findings_report.title'),
            { action: :tagged_findings_report }, class: 'list-group-item list-group-item-action' %>
          <%= link_to t('follow_up_audit.weaknesses_by_user_title'),
            { :action => :weaknesses_by_user, :controller_name => 'follow_up', :final => false }, class: 'list-group-item list-group-item-action' %>
          <% if POSTGRESQL_ADAPTER %>
            <%= link_to t('follow_up_audit.weaknesses_repeated_title'),
              { :action => :weaknesses_repeated, :controller_name => 'follow_up', :final => false }, class: 'list-group-item list-group-item-action' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

