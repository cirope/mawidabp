<% form_for :backup, :url => restore_backups_path, :html => { :multipart => true } do |f| -%>
  <p class="form_item">
    <%= f.label :file, t(:'backup.select_file_for_restore'), :class => :inline %>
    <span class="file_container">
      <%= f.file_field :file, :accept => 'application/zip',
        :class => 'inline_item file', :size => nil %>
    </span>
  </p>

  <p>
    <span class="button"><%= f.submit t(:'backup.restore'), :id => :restore_submit %></span>
  </p>
<% end -%>

<% if @restore_ok == true -%>
  <p class="center"><%= t :'backup.success' %></p>
<% elsif @restore_ok == false -%>
  <p class="center"><%= t :'backup.fail' %></p>
<% end -%>

<p class="warning center">
  <%= t :'backup.warning' %>
</p>

<div id="links">
<%= link_to t(:'label.list'), backups_path %> |
<%= link_to_back %>
</div>
<script type="text/javascript">
  Event.observe('restore_submit', 'click', function() {
    Helper.showLoading('restore_submit');
  });

  HTMLUtil.stylizeAllInputFiles();
</script>