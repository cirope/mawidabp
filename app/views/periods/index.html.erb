<table>
  <thead>
    <tr>
      <th></th>
      <th><%= Period.human_attribute_name :number %></th>
      <th><%= Period.human_attribute_name :description %></th>
      <th><%= Period.human_attribute_name :start %></th>
      <th><%= Period.human_attribute_name :end %></th>
      <th><%= Organization.human_name %></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <tr class="<%= cycle(:even, :odd) %>"><td></td><td colspan="8"></td><td></td></tr>
    <% @periods.each do |period| -%>
      <tr class="<%= cycle(:even, :odd) %>">
        <td></td>
        <td><%= h period.number %></td>
        <td><%= super_truncate period.description, 40 %></td>
        <td><%= h l(period.start, :format => :short) %></td>
        <td><%= h l(period.end, :format => :short) %></td>
        <td><%= h period.organization.name %></td>
        <td><%= link_to_show period %></td>
        <td><%= link_to_edit edit_period_path(period) %></td>
        <td><%= button_to_destroy period %></td>
        <td></td>
      </tr>
      <tr class="<%= cycle(:even, :odd) %>"><td></td><td colspan="8"></td><td></td></tr>
    <% end -%>
  </tbody>
</table>

<div id="links">
  <%= pagination_links @periods %>
  <%= link_to t(:'label.new'), new_period_path %>
  <div style="clear: both;"></div>
</div>