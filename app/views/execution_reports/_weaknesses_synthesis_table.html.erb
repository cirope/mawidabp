<% if table_data.kind_of?(Hash) %>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <% table_data[:order].each do |column| %>
          <% col_data = table_data[:columns][column] %>
          <th style="width: <%= "#{col_data.last}%" %>;"><%= col_data.first %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% table_data[:data].each do |row_data| %>
        <tr>
          <% table_data[:order].each do |column| %>
            <td><%= row_data[column] %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p style="margin: 1em 0em; font-size: 1.1em;"><em><%= table_data %></em></p>
<% end %>
