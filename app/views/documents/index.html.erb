<%= render partial: 'shared/search', locals: {
  options: {},
  columns: @query.blank? ? Document::COLUMNS_FOR_SEARCH.keys : @columns
} %>

<% if @tag.blank? && @documents_count == 0 %>
  <%= render 'shared/empty_index', message: @query.blank? ? t('.empty_html') : t('.empty_search_html') %>
<% else %>
  <% if @documents %>
    <%= render 'list' %>
  <% else %>
    <%= render 'tag_list' %>
  <% end %>
<% end %>

<% if can? :modify, :administration_documents %>
  <%= link_to_new new_document_path, class: 'btn btn-primary' %>
<% end %>
