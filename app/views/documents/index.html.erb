<%= render partial: 'shared/search', locals: {
  options: {},
  columns: @query.blank? ? Document::COLUMNS_FOR_SEARCH.keys : @columns
} %>

<% if @documents.empty? %>
  <%= render 'shared/empty_index', message: @query.blank? ? t('.empty_html') : t('.empty_search_html') %>
<% else %>
  <table class="table table-striped table-hover">
    <thead id="column_headers">
      <tr>
        <th colspan="2"></th>
        <%= make_filterable_column Document.human_attribute_name('name'), nil, 'name' %>
        <%= make_filterable_column Document.human_attribute_name('description'), { class: 'hidden-sm hidden-xs'}, 'description' %>
        <%= make_not_available_column Document.human_attribute_name('shared') %>
        <%= make_filterable_column Tag.model_name.human(count: 0), { class: 'hidden-xs' }, 'tags' %>
        <th colspan="3" class="text-right"><%= link_to_search %></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= show_document_info document %></td>
          <td><%= link_to_download_document document, class: 'btn btn-default btn-xs' %></td>
          <td><%= super_truncate document.name, 25 %></td>
          <td class="hidden-sm hidden-xs"><%= super_truncate document.description, 25 %></td>
          <td><%= t document.shared ? 'label.yes' : 'label.no' %></td>
          <td class="hidden-xs"><%= tags document.tags %></td>
          <td><%= link_to_show document %></td>
          <td><%= link_to_edit [:edit, document] %></td>
          <td><%= link_to_destroy document %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @documents %>
<% end %>

<%= link_to_new new_document_path, class: 'btn btn-primary' %>
