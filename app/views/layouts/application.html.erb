<!doctype html>
<html lang="<%= locale %>">
  <head>
    <meta charset="utf-8">
    <title><%= page_title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= javascript_tag { yield :js_extra } %>
  </head>

  <body
      data-theme="default"
      data-layout="fluid"
      data-sidebar-position="left"
      data-sidebar-behavior="sticky"
      data-controller="<%= controller_name %>"i
    >
    <div class="wrapper">
      <%= render 'shared/left_menu' if show_menu? %>

      <div class="main">
        <%= render 'shared/top_menu' %>

        <main class="content">
          <%= render 'shared/compatibility_warning' %>
          <%= render 'shared/breadcrumb' if show_breadcrumb? %>
          <%= render 'shared/flash'      if show_flash_message? %>

          <%= yield %>
        </main>

        <%= render 'shared/footer' %>
      </div>

      <%= javascript_tag { yield :js_extra_bottom } %>
    </div>
  </body>
</html>
