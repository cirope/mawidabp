<!doctype html>
<html lang="<%= locale %>">
  <head>
    <meta charset="utf-8">
    <title><%= page_title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= javascript_tag { yield :js_extra } %>
  </head>

  <body class="pt-5 my-3" data-controller="<%= controller_name %>">
    <div class="alert alert-warning fixed-top mx-auto text-center border-0 p-3 loading-caption" hidden>
      <strong><%= t 'navigation.loading' %></strong>
    </div>
    <div class="container">
      <%= render 'shared/compatibility_warning' %>
      <%= render 'shared/menu' %>
      <%= render 'shared/breadcrumb' if show_breadcrumb? %>
      <%= render 'shared/flash'      if show_flash_message? %>
      <%= yield %>

      <%= javascript_tag { yield :js_extra_bottom } %>
    </div>
  </body>
</html>
