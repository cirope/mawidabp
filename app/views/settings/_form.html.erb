<%= simple_form_for(@setting) do |f| %>
  <%= render 'shared/error_explanation', f: f %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-inputs">
        <%= f.input :name, input_html: { value: t("setting.#{@setting.name}"), readonly: true } %>
        <%= f.input :value, input_html: { autofocus: true } %>
        <%= f.input :description %>
      </div>
    </div>
  </div>

  <hr />

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.input :lock_version, as: :hidden %>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
