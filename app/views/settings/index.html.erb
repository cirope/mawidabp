<div class="card">
  <div class="card-body">
    <table class="table table-sm table-striped table-hover">
      <thead>
        <tr>
          <th><%= Setting.human_attribute_name :name %></th>
          <th class="d-none d-sm-table-cell"><%= Setting.human_attribute_name :description %></th>
          <th><%= Setting.human_attribute_name :value %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @settings.each do |setting| %>
          <tr>
            <td><%= super_truncate setting.to_s, 40 %></td>
            <td class="d-none d-sm-table-cell"><%= super_truncate setting.description, 40 %></td>
            <td><%= setting.value %></td>
            <td class="text-end"><%= link_to_show setting %></td>
            <td class="text-end"><%= link_to_edit edit_setting_path(setting) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @settings %>
  </div>
</div>
