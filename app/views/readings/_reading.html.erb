<% reading ||= finding_answer.reading_by @auth_user %>

<% if reading %>
  <%= icon 'fas', 'check', title: t('.readed_on', on: l(reading.created_at, format: :long)) %>
<% else %>
  <div data-readable-type="FindingAnswer" data-readable-id="<%= finding_answer.id %>">
    <%= link_to readings_path(id: finding_answer.id, type: 'FindingAnswer'), title: t('.mark_as_read'), data: { remote: true, method: :post } do %>
      <%= icon 'fas', 'envelope' %>
    <% end %>
  </div>
<% end %>
