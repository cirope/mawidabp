<%= f.simple_fields_for :issues do |i_f| %>
  <%= render 'issue', f: i_f, readonly: readonly %>
<% end %>
<div id="weakness_issues"></div>

<div class="col-md-12 text-right">
  <div class="row">
    <div class="col-md-10"></div>
    <div class="col-md-2 text-right">
      <div class="row">
        <div class="col-10" data-sum-amount-impact-risks>
          <h5> <%= number_to_currency @weakness.issues_amount %></h5>
        </div>
        <div class="col-2"></div>
      </div>
    </div>
  </div>
</div>

<div class="d-none" data-impact-risks-value data-impact-risks-types="<%= finding_impact_risks_types(@weakness) %>">
  <%= @weakness.impact_risk_value %>
</div>

<div class="d-none" data-amount-probability-value>
  <%= @weakness.probability_risk %>
</div>

<%= link_to_add_fields(
  t('finding.add_issue'), f,
  (:issues unless readonly), nil,
  { insert_into: '#weakness_issues' }
) %>
