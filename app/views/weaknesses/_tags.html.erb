<% if SHOW_WEAKNESS_EXTRA_ATTRIBUTES %>
  <div class="row">
    <div class="col-md-12">
      <%= f.input :tag_ids, as: :check_boxes, collection: finding_tag_options, disabled: readonly %>
    </div>
  </div>
<% else %>
  <br />
  <h4>
    <%= Tag.model_name.human count: 0 %>
  </h4>

  <div class="row">
    <div class="col-md-6">
      <h5><strong><%= Tag.human_attribute_name :name %></strong></h5>
    </div>
  </div>

  <div id="taggings">
    <%= f.simple_fields_for :taggings do |t_f| %>
      <%= render 'findings/tagging', f: t_f, parent: f, readonly: readonly %>
    <% end %>

    <%= link_to_add_fields(t('finding.add_tagging'), f, :taggings, 'findings/tagging') unless readonly %>
  </div>
<% end %>
