<% if params[:control_objective].blank? %>
  <%= render partial: 'shared/search', locals: {
    options: {columns_for_sort: Weakness.columns_for_sort},
    columns: @query.blank? ? (Weakness::COLUMNS_FOR_SEARCH.keys - ['organization']) : @columns
  } %>
<% end %>
<table class="table table-condensed table-striped table-hover">
  <thead id="column_headers">
    <tr>
      <th></th>
      <%= make_filterable_column Review.model_name.human, nil, 'review' %>
      <%= make_filterable_column PlanItem.human_attribute_name(:project), { class: 'hidden-xs'}, 'project' %>
      <%= make_filterable_column Weakness.human_attribute_name(:review_code), nil, 'review_code' %>
      <%= make_filterable_column Weakness.human_attribute_name(:title), { class: 'hidden-xs'}, 'title' %>
      <%= make_not_available_column Weakness.human_attribute_name(:state), class: 'hidden-xs' %>
      <%= make_not_available_column Weakness.human_attribute_name(:follow_up_date), class: 'hidden-xs hidden-sm hidden-md' %>
      <%= make_not_available_column Weakness.human_attribute_name(:risk), class: 'hidden-xs' %>
      <%= make_filterable_column Tag.model_name.human(count: 0), { class: 'hidden-xs' }, 'tags' %>
      <%= make_not_available_column WorkPaper.model_name.human(count: 0), class: 'hidden-xs' %>
      <th colspan="2" class="text-right"><%= link_to_search if params[:control_objective].blank? %></th>
    </tr>
  </thead>

  <tbody>
    <% @weaknesses.each do |weakness| %>
      <tr <%== 'class="text-muted"' if weakness.is_in_a_final_review? %>>
        <td><%= finding_updated_at_text weakness %></td>
        <td class="nowrap"><%= show_review_with_close_date_as_abbr weakness.review %></td>
        <td class="hidden-xs"><%= super_truncate weakness.review.try(:plan_item).try(:project), 20 %></td>
        <td class="nowrap"><%= show_finding_review_code_with_decription_as_abbr(weakness) %></td>
        <td class="hidden-xs"><%= super_truncate weakness.title, 20 %></td>
        <td class="hidden-xs"><%= super_truncate weakness.state_text, 19 %></td>
        <td class="hidden-xs hidden-sm hidden-md"><%= l weakness.follow_up_date, format: :short if weakness.follow_up_date %></td>
        <td class="hidden-xs"><%= weakness.risk_text %></td>
        <td class="hidden-xs"><%= tags weakness.tags.reload %></td>
        <td class="hidden-xs"><%= t weakness.work_papers.blank? ? 'label.no' : 'label.yes' %></td>
        <td><%= link_to_show weakness %></td>
        <td><%= link_to_edit edit_weakness_path(weakness) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<div class="clearfix">
  <%= paginate @weaknesses %>

  <%= link_to t('finding.download_csv'), weaknesses_path(request.query_parameters.merge(format: :csv)) %>

  <% if params[:control_objective].to_i > 0 %>
    | <%= link_to t('label.new'), new_weakness_path(
      control_objective_item: params[:control_objective]), class: 'btn btn-primary' %> |
    <%= link_to t('weakness.see_all'), weaknesses_path %>
  <% end %>
</div>
