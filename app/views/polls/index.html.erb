<%= render :partial => 'shared/search', :locals => {
  :options => {},
  :columns => @query.blank? ? Poll::COLUMNS_FOR_SEARCH.keys : @columns
} %>

<table class="table table-condensed table-striped">
  <thead id="column_headers">
    <tr>
      <%= make_filterable_column Poll.human_attribute_name('user'), nil, 'name', 'last_name' %>
      <%= make_filterable_column Poll.human_attribute_name('questionnaire_id'), nil, 'questionnaire_name' %>
      <%= make_filterable_column Poll.human_attribute_name('answered'), nil, 'answered' %>
      <%= make_not_available_column Poll.human_attribute_name('send_date') %>
      <%= make_not_available_column Poll.human_attribute_name('answer_date') %>
      <th colspan="2" class="text-right"><%= link_to_search %></th>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
      <tr>
        <td><%= poll.user ? poll.user.informal_name : poll.customer_email %></td>
        <td><%= poll.questionnaire.name %></td>
        <td><%= t_boolean poll.answered %></td>
        <td><%= l poll.created_at.to_date, format: :long %></td>
        <td><%= l(poll.updated_at.to_date, format: :long) if poll.answered %></td>
        <td><%= link_to_show poll %></td>
        <td><%= link_to_destroy poll %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<div>
  <%= paginate @polls %>
  <%= link_to t('label.new'), new_poll_path, class: 'btn btn-primary' %> |
  <%= link_to t('poll.import_csv_customers_title'),
    import_csv_customers_polls_path %>
</div>
