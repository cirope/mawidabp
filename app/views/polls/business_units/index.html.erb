<%= render partial: 'shared/filter_form',
  locals: { action: 'index', extra_params: {},
  forms: { poll_date_range: true, business_unit: true, questionnaire: true }
} %>

<% if @report.business_unit_polls.present? %>
  <h2><%= @report.questionnaire.name %></h2>
  <% @report.business_unit_polls.each_key do |but| %>
    <hr />
    <h3><%= but %>:</h3>
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th><%= Question.model_name.human %></th>
          <% Question::ANSWER_OPTIONS.each do |col_name| %>
            <th><%= t "activerecord.attributes.answer_option.options.#{col_name}" %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @report.questionnaire.questions.each do |question| %>
          <tr>
            <td><%= question.question %></td>
            <% Question::ANSWER_OPTIONS.each_index do |i| %>
              <td><%= @report.business_unit_polls[but][:rates][question.question][i] %> %</td>
            <% end%>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p style="margin: 1em 0;">
      <%= "#{t('poll.total_answered')}: #{@report.business_unit_polls[but][:answered]}" %><br />
      <%= "#{t('poll.total_unanswered')}: #{@report.business_unit_polls[but][:unanswered]}" %><br />
      <br /><strong><%= "#{t('poll.score')}: #{@report.business_unit_polls[but][:calification]}%" %></strong>
    </p>
  <% end %>
<% else %>
  <p style="margin: 1em 0;">
    <em><%= t('poll.without_data') %></em>
  </p>
<% end %>

<hr />

<div class="form-footer">
  <%= link_to t('label.back'), :action => :index %> |
  <%= link_to t('label.download'), '#',
    data: { toggle: 'modal', target: "#customize_report" } %>
</div>

<%= render :partial => 'shared/customize_report_form', :locals => {
  :options => {
    :form_name => 'report',
    :url => request.query_parameters.merge(
      {:action => 'index', :_ts => Time.now.to_i }
    ),
    method: :get,
    :fields => [
      {
        :name => :report_title,
        :label => t('customize_report_form.title'),
        :value => t('poll.report_title')
      },
      {
        :name => :report_subtitle,
        :label => t('customize_report_form.subtitle'),
        :value => t('poll.summary_by_business_unit_subtitle')
      }
    ]
  }
} %>
