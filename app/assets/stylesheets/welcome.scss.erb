[data-controller="welcome"] {
  footer {
    .glyphicon-info-sign {
      cursor: help;
    }
  }

  header.main {
    position: absolute;
    top: 50px;
    left: 0;
    right: 0;
    height: 186px;
    border-bottom: 4px solid #ffb400;
    background-color: #fff;
    background-image: url(<%= image_path 'welcome/header_bg.jpg' %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: top center;

    .logo-container {
      margin-top: 58px;
    }
  }

  .alert:not(.alert-warning) {
    margin: 200px 0 -180px 0;
  }

  .help {
    margin-top: 200px;
  }
}
